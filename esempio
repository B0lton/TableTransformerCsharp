Commessa commessa = new Commessa();
			DataTable dt = new DataTable();
			dt.Columns.Add("numerocommessa", typeof(string));
			DataRow row = dt.NewRow();
			row["numerocommessa"] = "202000352";
			dt.Rows.Add(row);

			foreach (DataRow riga in dt.Rows)
			{
				foreach (DataColumn colonna in dt.Columns)
				{
					PropertyInfo proprietà = commessa.GetType().GetProperties().SingleOrDefault(x => x.Name.Equals(colonna.ColumnName, StringComparison.InvariantCultureIgnoreCase));
					proprietà.SetValue(commessa, Convert.ChangeType(riga[colonna.ColumnName],riga[colonna.ColumnName].GetType()));
				}
			}
